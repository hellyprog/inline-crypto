{
    "name": "Inline Crypto",
    "description": "Extension for getting inline crypto info on page.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": ["storage", "contextMenus", "tabs", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [{
        "resources": ["templates/info-popup.template.html", "templates/info-popup.styles.css", "templates/info-popup.js"],
        "matches": ["https://*/*"]
    }]
}